<div class="container" id="<%= dom_id article %>">
  <a href="<%= article_counter_articles_path(article) %>" method: :post >
    <h2>
      <%= link_to article.title, article %>
    </h2>
    <p class="container_ar">
      <%= link_to article.body, article %>
    </p>
    <p>
      You have visited <%= article.counter_articles %> times
    </p>
  </a>
</div>
